{
  "name": "kiritoru",
  "version": "1.2.2",
  "description": "Screen capture",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "npx electron-builder --mac --universal --dir",
    "build-win": "npx electron-builder --win --x64 --dir",
    "gen-icon": "./node_modules/.bin/electron-icon-builder --input=/path/to/icon.png --output=./assets",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "xyz.zono.kiritoru2",
    "productName": "kiritoru",
    "files": [
      "assets/**/*",
      "main.js"
    ],
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": ["dmg"]
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "assets/icons/",
        "to": "assets/icons",
        "filter": ["**/*"]
      }
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  }
}
